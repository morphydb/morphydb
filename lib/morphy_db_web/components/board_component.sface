<div
  class="grid grid-cols-8 grid-rows-8 aspect-square"
  :on-click-away="deselect"
>
  {#for square <- @squares}
    <SquareComponent
      id={"square-#{square.index}"}
      {=square}
      click="square_click"
      is_selected={Bitboard.is_set(@selected_squares, square.index)}
      is_ctrl_highlighted={Bitboard.is_set(@highlighted_ctrl_squares, square.index)}
      is_alt_highlighted={Bitboard.is_set(@highlighted_alt_squares, square.index)}
    />
  {/for}
</div>
