<div
  class="grid grid-cols-8 grid-rows-8 aspect-square"
  :on-click-away="deselect"
>
  {#for square <- @squares}
    <SquareComponent
          {=square}
          click="square_click"
          {=@selected_squares}
          {=@highlighted_squares}
          {=@highlighted_ctrl_squares}
          {=@highlighted_alt_squares}
        >
        </SquareComponent>
  {/for}
</div>
